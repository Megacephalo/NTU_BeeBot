<launch>
   <arg name="scan_topic" default="/beebot/laser/scan" />
   <arg name="cmd_vel" default="/beebot_diff_drive_controller/cmd_vel" />

   <node ns="local_costmap" name="voxel_grid_throttle" pkg="topic_tools" type="throttle" args="messages voxel_grid 3.0 voxel_grid_throttled" />

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
    <remap from="/cmd_vel" to="$(arg cmd_vel)" />
    <remap from="/hokuyo_scan" to="$(arg scan_topic)" />

    <param name="footprint_padding" value="0.01" />
    <param name="controller_frequency" value="10.0" />
    <param name="controller_patience" value="100.0" />

    <param name="base_global_planner" value="SBPLLatticePlanner" />
    <!--rosparam file="$(find sbpl_lattice_planner)/launch/base_local_planner_params_close.yaml" command="load" /-->
    <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /-->
    <!--<param name="base_local_planner" value="pose_follower/PoseFollower" />-->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />

    <param name="SBPLLatticePlanner/primitive_filename" value="$(find sbpl)/matlab/mprim/rover.mprim" />

    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/local_costmap_params_close.yaml" command="load" />
    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/sbpl_global_params.yaml" command="load" />
    <rosparam file="$(find mobile_safeguard_primitive)/launch/navigation/simulation/sim_config/tebLocalPlanner_params.yaml" command="load" />
   </node>
</launch>

